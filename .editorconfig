# EditorConfig 配置文件
# 统一编辑器的代码风格设置
# https://editorconfig.org

root = true

# 所有文件的默认设置
[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true
indent_style = space
indent_size = 2

# Markdown 文件
[*.md]
trim_trailing_whitespace = false
indent_size = 2

# Python 文件
[*.py]
indent_size = 4

# XML 文件（包括 .drawio）
[*.{xml,drawio}]
indent_size = 2

# YAML 文件
[*.{yml,yaml}]
indent_size = 2

# JSON 文件
[*.json]
indent_size = 2

# Shell 脚本
[*.sh]
indent_size = 2

# Makefile
[Makefile]
indent_style = tab

